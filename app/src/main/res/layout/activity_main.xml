<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@android:color/background_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.joseshalloweenmakeup.MainActivity">


    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Jose Perez"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true" />



    <TextView
        android:id="@+id/address_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/name_text_view"
        android:textSize="24sp"
        android:text="3240 W 55th st, Chicago,IL 60632"
        android:textColor="@android:color/white" />


    <TextView
        android:id='@+id/cell_text_view'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_text_view"
        android:textSize="24sp"
        android:text="(773)844-9775"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/close_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textStyle="italic"
        android:textSize="16sp"
        android:text="Small family owned makeup business, call to get free estimate!"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/halloween_text_view"
        android:textAllCaps="true"
        android:textSize="32sp"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy Halloween!"
        android:layout_below="@+id/cell_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <ImageView
        android:src="@drawable/jose"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_alignParentAbove="true"
        android:id="@+id/imageView"
        android:layout_below="@+id/halloween_text_view"
        android:layout_alignLeft="@+id/halloween_text_view"
        android:layout_alignStart="@+id/halloween_text_view"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="42dp" />

</RelativeLayout>
